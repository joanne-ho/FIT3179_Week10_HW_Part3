{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Personal and Economic Freedom by Country 2017",
  "data": {
    "url": "https://raw.githubusercontent.com/joanne-ho/FIT3179_Week10_HW_Part3/main/data/hfi_cc_2019_one_year.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Eastern Europe",
          "Western Europe",
          "Middle East & North Africa",
          "East Asia",
          "South Asia",
          "Caucasus & Central Asia",
          "Sub-Saharan Africa",
          "North America",
          "Latin America & the Caribbean",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "Eastern Europe",
          "Western Europe",
          "Middle East & North Africa",
          "East Asia",
          "South Asia",
          "Caucasus & Central Asia",
          "Sub-Saharan Africa",
          "North America",
          "Latin America & the Caribbean",
          "Oceania"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Region_selection == null || datum.region == Region_selection"}
  ],
  "encoding": {
    "x": {
      "field": "pf_score",
      "type": "quantitative",
      "title": "Personal Freedom",
      "axis": {"tickCount": 5},
      "scale": {"type": "linear", "domain": [0, 10]}
    },
    "y": {
      "field": "ef_score",
      "type": "quantitative",
      "title": "Economic Freedom",
      "axis": {"tickCount": 5},
      "scale": {"type": "linear", "domain": [0, 10]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {
          "field": "region",
          "title": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "Eastern Europe",
              "Western Europe",
              "Middle East & North Africa",
              "East Asia",
              "South Asia",
              "Caucasus & Central Asia",
              "Sub-Saharan Africa",
              "North America",
              "Latin America & the Caribbean",
              "Oceania"
            ],
            "range": [
              "#f01009",
              "#ed8c09",
              "#b1b00a",
              "#5bc74a",
              "#28721a",
              "#0fceba",
              "#3c73ba",
              "#1c0ae3",
              "#c37de5",
              "#db21cd"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {
            "field": "pf_score",
            "type": "quantitative",
            "format": ",",
            "title": "Personal Freedom Score"
          },
          {
            "field": "ef_score",
            "type": "quantitative",
            "format": ",",
            "title": "Economic Freedom Score"
          },
          {
            "field": "hf_score",
            "type": "quantitative",
            "format": ",",
            "title": "Human Freedom Score"
          },
          {
            "field": "hf_rank",
            "type": "quantitative",
            "format": ",",
            "title": "Human Freedom Score Rank"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "countries", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['countries'] == 'China' || datum['countries'] == 'India' || datum['countries'] == 'Australia' || datum['countries'] == 'United States' || datum['countries'] == 'New Zealand'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {
            "field": "pf_score",
            "type": "quantitative",
            "format": ",",
            "title": "Personal Freedom Score"
          },
          {
            "field": "ef_score",
            "type": "quantitative",
            "format": ",",
            "title": "Economic Freedom Score"
          },
          {
            "field": "hf_score",
            "type": "quantitative",
            "format": ",",
            "title": "Human Freedom Score"
          },
          {
            "field": "hf_rank",
            "type": "quantitative",
            "format": ",",
            "title": "Human Freedom Score Rank"
          }
        ]
      }
    }
  ],
  "config": {}
}
